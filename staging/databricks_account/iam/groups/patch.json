{
  "verb": "patch",
  "path": "/api/2.0/accounts/{account_id}/scim/v2/Groups/{id}",
  "description": "Partially updates the details of a group.",
  "parameters": {
    "account_id": {
      "in": "path",
      "required": true,
      "type": "uuid",
      "description": "Databricks account ID"
    },
    "id": {
      "in": "path",
      "required": true,
      "description": "Unique ID for a group in the Databricks account."
    }
  },
  "requestBody": {
    "properties": {
      "schemas": {
        "description": "The schema of the patch request. Must be [\"urn:ietf:params:scim:api:messages:2.0:PatchOp\"]."
      },
      "Operations": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "op": {
              "type": "string",
              "enum": [
                "add",
                "remove",
                "replace"
              ],
              "description": "Type of patch operation."
            },
            "path": {
              "type": "string",
              "description": "Selection of patch operation"
            },
            "value": {
              "description": "Value to modify"
            }
          }
        }
      }
    }
  },
  "responses": {
    "401": {
      "error_code": "UNAUTHORIZED",
      "description": "The request does not have valid authentication credentials for the operation."
    },
    "500": {
      "error_code": "INTERNAL_SERVER_ERROR",
      "description": "Internal error."
    }
  }
}