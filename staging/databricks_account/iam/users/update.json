{
  "verb": "put",
  "path": "/api/2.0/accounts/{account_id}/scim/v2/Users/{id}",
  "description": "Replaces a user's information with the data supplied in request.",
  "parameters": {
    "account_id": {
      "in": "path",
      "required": true,
      "type": "uuid",
      "description": "Databricks account ID"
    },
    "id": {
      "in": "path",
      "required": true,
      "description": "Unique ID for a user in the Databricks account."
    }
  },
  "requestBody": {
    "properties": {
      "id": {
        "description": "Databricks user ID. This is automatically set by Databricks. Any value provided by the client will be ignored."
      },
      "userName": {
        "description": "Email address of the Databricks user."
      },
      "emails": {
        "type": "array",
        "description": "All the emails associated with the Databricks user.",
        "items": {
          "type": "object",
          "properties": {
            "$ref": {
              "type": "string"
            },
            "value": {
              "type": "string"
            },
            "display": {
              "type": "string"
            },
            "primary": {
              "type": "boolean"
            },
            "type": {
              "type": "string"
            }
          }
        }
      },
      "name": {
        "description": "object"
      },
      "givenName": {
        "type": "string",
        "description": "Given name of the Databricks user."
      },
      "familyName": {
        "type": "string",
        "description": "Family name of the Databricks user."
      },
      "displayName": {
        "type": "string",
        "description": "String that represents a concatenation of given and family names. For example"
      },
      "John Smith": {
        "description": "."
      },
      "roles": {
        "type": "array",
        "description": "Indicates if the user has the admin role.",
        "items": {
          "type": "object",
          "properties": {
            "$ref": {
              "type": "string"
            },
            "value": {
              "type": "string"
            },
            "display": {
              "type": "string"
            },
            "primary": {
              "type": "boolean"
            },
            "type": {
              "type": "string"
            }
          }
        }
      },
      "externalId": {
        "type": "string",
        "description": "External ID is not currently supported. It is reserved for future use."
      },
      "active": {
        "type": "boolean",
        "description": "If this user is active"
      }
    }
  },
  "responses": {
    "401": {
      "error_code": "UNAUTHORIZED",
      "description": "The request does not have valid authentication credentials for the operation."
    },
    "500": {
      "error_code": "INTERNAL_SERVER_ERROR",
      "description": "Internal error."
    }
  }
}