{
  "verb": "put",
  "path": "/api/2.0/accounts/{account_id}/scim/v2/ServicePrincipals/{id}",
  "description": "Updates the details of a single service principal.",
  "parameters": {
    "account_id": {
      "in": "path",
      "required": true,
      "type": "uuid",
      "description": "Databricks account ID"
    },
    "id": {
      "in": "path",
      "required": true,
      "description": "Unique ID for a service principal in the Databricks account."
    }
  },
  "requestBody": {
    "properties": {
      "id": {
        "description": "Databricks service principal ID."
      },
      "applicationId": {
        "description": "UUID relating to the service principal"
      },
      "displayName": {
        "type": "string",
        "description": "Example"
      },
      "\"etl-service\"": {
        "description": "String that represents a concatenation of given and family names."
      },
      "roles": {
        "type": "array",
        "description": "Indicates if the user has the admin role.",
        "items": {
          "type": "object",
          "properties": {
            "$ref": {
              "type": "string"
            },
            "value": {
              "type": "string"
            },
            "display": {
              "type": "string"
            },
            "primary": {
              "type": "boolean"
            },
            "type": {
              "type": "string"
            }
          }
        }
      },
      "externalId": {
        "type": "string"
      },
      "active": {
        "type": "boolean",
        "description": "If this user is active"
      }
    }
  },
  "responses": {
    "401": {
      "error_code": "UNAUTHORIZED",
      "description": "The request does not have valid authentication credentials for the operation."
    },
    "500": {
      "error_code": "INTERNAL_SERVER_ERROR",
      "description": "Internal error."
    }
  }
}