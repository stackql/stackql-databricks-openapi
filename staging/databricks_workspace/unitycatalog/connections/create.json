{
 "/api/2.1/unity-catalog/connections": {
  "post": {
   "operationId": "connections-create",
   "externalDocs": {
    "url": "https://docs.databricks.com/api/workspace/connections/create"
   },
   "x-stackQL-resource": "connections",
   "x-stackQL-method": "create",
   "x-stackQL-verb": "insert",
   "x-numReqParams": 0,
   "parameters": [],
   "requestBody": {
