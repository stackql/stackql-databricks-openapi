     "description": "(string) Full name of the table.",
     "in": "path"
    }
   ],
   "responses": {
    "200": {
     "description": "The new monitor was successfully created.",
     "content": {
      "application/json": {
       "schema": {
        "type": "object",
        "properties": {
         "assets_dir": {
          "type": "string"
         },
         "output_schema_name": {
          "type": "string"
         },
         "inference_log": {
          "type": "object",
          "properties": {
           "problem_type": {
            "type": "string"
           },
           "timestamp_col": {
            "type": "string"
           },
           "granularities": {
            "type": "array",
            "items": {
