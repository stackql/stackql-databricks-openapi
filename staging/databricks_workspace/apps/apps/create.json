        "resources": {
         "type": "Array of object"
        }
       },
       "example": {
        "name": "my-custom-app",
        "description": "My app description.",
        "resources": [
         {
          "name": "api-key",
          "description": "API key for external service.",
          "secret": {
           "scope": "my-scope",
           "key": "my-key",
           "permission": "READ"
          },
          "sql_warehouse": {
           "id": "e9ca293f79a74b5c",
           "permission": "CAN_MANAGE"
          },
          "serving_endpoint": {
           "name": "databricks-meta-llama-3-1-70b-instruct",
           "permission": "CAN_MANAGE"
          },
          "job": {
           "id": "1234",
           "permission": "CAN_MANAGE"
          }
         }
        ]
       }
      }
     }
    }
   },
   "responses": {
    "200": {
